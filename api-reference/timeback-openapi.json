    "/health": {
      "get": {
        "summary": "Health check",
        "description": "Returns API health status",
        "tags": ["System"],
        "security": [],
        "responses": {
          "200": {
            "description": "API health status",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
